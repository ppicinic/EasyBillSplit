<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.philpicinic.easybillsplit" >
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.GroupSelectActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="Settings" >
        </activity>
        <activity
            android:name=".activity.GroupCreateActivity"
            android:label="@string/create_group_name" >
        </activity>
        <activity
            android:name=".activity.ItemCreateActivity"
            android:label="@string/title_activity_item_create" >
        </activity>
        <activity
            android:name=".activity.BillFinalActionActivity"
            android:label="@string/title_activity_bill_final_action" >
        </activity>
        <activity
            android:name=".activity.BillOutputActivity"
            android:label="@string/title_activity_bill_output" >
        </activity>
        <activity
            android:name=".activity.PersonBillActivity"
            android:label="@string/title_activity_person_bill" >
        </activity>
    </application>

</manifest>
